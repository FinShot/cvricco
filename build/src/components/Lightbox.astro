<div class="lightbox" id="global-lightbox">
    <button class="close-button">&times;</button>
    <button class="nav-button prev">&lt;</button>
    <button class="nav-button next">&gt;</button>
    <div class="lightbox-content">
      <img src="" alt="" class="lightbox-image" />
    </div>
  </div>
  
  <style>
    .lightbox {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.9);
      z-index: 1000;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
  
    .lightbox.active {
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 1;
    }
  
    .lightbox-content {
      max-width: 90vw;
      max-height: 90vh;
      position: relative;
    }
  
    .lightbox-image {
      max-width: 100%;
      max-height: 90vh;
      object-fit: contain;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
  
    .lightbox-image.loaded {
      opacity: 1;
    }
  
    .close-button,
    .nav-button {
      position: fixed;
      background: rgba(255, 255, 255, 0.1);
      border: none;
      color: white;
      font-size: 2rem;
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease;
      z-index: 1001;
    }
  
    .close-button:hover,
    .nav-button:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  
    .close-button {
      top: 1rem;
      right: 1rem;
    }
  
    .nav-button {
      top: 50%;
      transform: translateY(-50%);
    }
  
    .prev {
      left: 1rem;
    }
  
    .next {
      right: 1rem;
    }
  </style>