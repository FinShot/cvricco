---
import Navigation from '../components/Navigation.astro';
import Lightbox from '../components/Lightbox.astro';
import Chatbot from '../components/Chatbot.astro';
import '../styles/theme.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ricco Yeung's Portfolio - Senior Product Marketing Manager" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<Lightbox />
		<Chatbot />
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
		<script is:inline>
			document.addEventListener('DOMContentLoaded', function() {
				AOS.init({
					duration: 1000,
					once: true,
					disable: 'mobile'
				});
			});
		</script>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
		background: var(--background);
	}
	
	body {
		margin: 0;
		padding: 0;
		color: var(--text);
		overflow-x: hidden;
		width: 100%;
	}
</style>