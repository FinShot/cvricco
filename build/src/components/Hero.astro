<section class="hero">
  <div class="hero-background"></div>
  <div class="hero-overlay"></div>
  <div class="hero-content" data-aos="fade-up">
    <div class="hero-layout">
      <div class="image-container">
        <img 
          src="/images/hero/heroprofile.jpg" 
          alt="Ricco Yeung" 
          class="hero-image"
        />
      </div>
      <div class="name-container">
        <div class="animation-container">
          <h1 class="animated-name">
            {Array.from("Ricco Yeung").map((letter, index) => (
              <span style={`animation-delay: ${index * 0.1}s`}>
                {letter === " " ? "\u00A0" : letter}
              </span>
            ))}
          </h1>
          <div class="title-container">
            <p class="title" style="animation-delay: 1.5s">
              Product Marketing & Brand Expert
            </p>
            <p class="subtitle" style="animation-delay: 2s">
              AI Workflow Specialist
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="scroll-indicator">
      <span>Scroll to explore</span>
      <div class="mouse">
        <div class="wheel"></div>
      </div>
    </div>
  </div>
</section>

<style>
.hero {
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&auto=format&fit=crop&w=2560&q=80');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  transform: scale(1.1);
  animation: subtle-zoom 20s infinite alternate ease-in-out;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.5),
    rgba(0, 0, 0, 0.7)
  );
}

.hero-content {
  position: relative;
  color: white;
  z-index: 2;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
}

.hero-layout {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
}

.hero-image {
  width: 280px; /* Adjust size as needed */
  height: 380px; /* Adjust size as needed */
  object-fit: cover;
  border: 4px solid white;
  border-radius: 20px; /* Rounded corners */
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.8); /* Soft shadow */
  transition: transform 0.3s ease;
}

.hero-image:hover {
  transform: translateY(-10px); /* Optional: slight lift on hover */
}

.image-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: auto; /* Remove fixed height */
  padding: 2rem;
}

.image-container {
  flex: 1;
  height: 200px;
  margin-top: 180px; /* Adjust this value to move it down */
  /* or */
  padding-top: 100px;
}

.name-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 180px; /* Add this to move it down */
  align-items: center;
}

.animation-container {
  position: relative;
  overflow: hidden;
  padding: 2rem;
}

.animated-name {
  font-size: 5rem;
  font-weight: 700;
  margin: 0;
  display: flex;
  justify-content: flex-start;
  gap: 0.1em;
  transform-origin: left;
}

.animated-name span {
  opacity: 0;
  transform: translateY(50px) rotateX(-90deg) scale(2.5);
  animation: revealLetter 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  background: linear-gradient(120deg, #ffffff 0%, #e0e0e0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  position: relative;
  display: inline-block;
  transform-origin: center;
}

.animated-name span::before {
  content: '';
  position: absolute;
  width: 120%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
  transform: translateX(-120%) skewX(-45deg);
  animation: lightRay 0.5s ease-out forwards;
  opacity: 0;
  left: -10%;
}

.title-container {
  margin-top: 1rem;
}

.title {
  font-size: 1.5rem;
  margin-top: 1rem;
  color: #e0e0e0;
  letter-spacing: 2px;
  opacity: 0;
  animation: fadeIn 0.5s ease-out forwards;
  margin-bottom: 0.5rem;
}
.subtitle {
  font-size: 1rem;
  color: #e0e0e0;
  letter-spacing: 1px;
  opacity: 0;
  animation: fadeIn 0.5s ease-out forwards;
}

.scroll-indicator {
  margin-top: auto;
  padding-bottom: 8rem;
  text-align: center;
  color: white;
  opacity: 0.8;
}

.scroll-indicator span {
  display: block;
  margin-bottom: 2rem;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.mouse {
  width: 30px;
  height: 50px;
  border: 2px solid white;
  border-radius: 15px;
  margin: 0 auto;
  position: relative;
}

.wheel {
  width: 4px;
  height: 8px;
  background: white;
  position: absolute;
  top: 8px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 2px;
  animation: scroll 2s infinite;
}

@keyframes revealLetter {
  0% {
    opacity: 0;
    transform: translateY(50px) rotateX(-90deg) scale(2.5);
  }
  100% {
    opacity: 1;
    transform: translateY(0) rotateX(0) scale(1);
  }
}

@keyframes lightRay {
  0% {
    transform: translateX(-120%) skewX(-45deg);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translateX(120%) skewX(-45deg);
    opacity: 0;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scroll {
  0% {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  100% {
    opacity: 0;
    transform: translateX(-50%) translateY(20px);
  }
}

@keyframes subtle-zoom {
  0% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1.2);
  }
}

@media (max-width: 768px) {
  .hero {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    position: relative;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    width: 100vw;
    background-position: center;
    background-size: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    width: 100vw;
  }

  .hero {
    min-height: 100vh;
    padding-top: 50px;  /* Reduced padding for smaller nav */
  }

  .hero-layout {
    flex-direction: column;
    gap: 1rem;
    margin-top: 0;  /* Remove negative margin */
  }

  .image-container {
    flex: none;
    padding: 0.5rem;
    margin-top: 2rem;  /* Add space below nav */
  }

  .hero-image {
    width: 150px;  /* Much smaller image */
    height: 200px;  /* Maintain aspect ratio */
    margin: 0 auto;
  }

  .name-container {
    flex: none;
    margin-top: 0;
  }

  .animated-name {
    font-size: 2.5rem;
    justify-content: center;
  }

  .hero-background {
    width: 100vw;
    right: -15px;  /* Push the background past the right edge */
    background-size: cover;
    background-position: center;
  }

  .hero-overlay {
    width: 100vw;
    right: -15px;  /* Match the background's right edge */
  }
}
</style>