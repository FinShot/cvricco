    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    align-items: center;
    justify-content: center;
  }

  .video-modal-content {
    position: relative;
    background: #fff;
    border-radius: 12px;
    padding: 2rem;
    max-width: 85vw;
    max-height: 85vh;
    width: 100%;
    max-width: 1000px;
  }

  .close-button {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    font-size: 2rem;
    color: #666;
    cursor: pointer;
    z-index: 10000;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.3s ease;
  }

  .close-button:hover {
    background-color: #f0f0f0;
    color: #333;
  }

  .modal-video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .modal-video-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 8px;
  }

  .modal-video-title {
    font-size: 1.5rem;
    margin: 0;
    color: var(--text-dark);
    font-weight: 600;
    text-align: center;
  }

