---
interface Props {
	id: string;
	title: string;
	class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} class:list={["section", className]}>
	<div class="section-content">
		<h2 class="section-title">{title}</h2>
		<slot />
	</div>
</section>

<style>
	.section {
		padding: 6rem 1rem;
	}
	.section-content {
		max-width: 1200px;
		margin: 0 auto;
	}
	.section-title {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
		color: var(--primary);
	}
	.section:nth-child(even) {
		background: var(--secondary-background);
	}
</style>